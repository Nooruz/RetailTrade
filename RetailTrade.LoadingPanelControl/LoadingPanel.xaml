<UserControl x:Class="RetailTrade.LoadingPanelControl.LoadingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Height="60">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.Style>

        <Style TargetType="{x:Type UserControl}">
            <Setter Property="Visibility" Value="{Binding IsLoading, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Style>
        
    </UserControl.Style>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Ellipse Grid.Column="0" 
                 Grid.Row="0"
                 Grid.RowSpan="2"
                 Width="50"
                 Height="50"
                 Margin="0 0 10 0"
                 RenderTransformOrigin=".5 .5"
                 StrokeThickness="5"
                 Stroke="#0172C5"
                 StrokeDashArray="21">

            <Ellipse.RenderTransform>
                <RotateTransform x:Name="Rotation" Angle="0"/>
            </Ellipse.RenderTransform>

            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetName="Rotation" 
                                             Storyboard.TargetProperty="Angle"
                                             From="0" 
                                             To="360"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Ellipse.Triggers>
            
        </Ellipse>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   FontWeight="DemiBold"
                   FontSize="14"
                   Text="{Binding Title}"/>

        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   FontSize="12"
                   VerticalAlignment="Center"
                   Text="{Binding Text}"/>

    </Grid>
    
</UserControl>
