<Application x:Class="RetailTrade.POS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:RetailTrade.POS.Views"
             xmlns:viewModels="clr-namespace:RetailTrade.POS.ViewModels">
    <Application.Resources>
        <ResourceDictionary>


            <!--#region Основной меню-->

            <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
                <views:LoginView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>

            <!--<DataTemplate DataType="{x:Type viewModels:OrganizationViewModel}">
                <views:OrganizationView/>
            </DataTemplate>-->

            <!--#endregion-->
            

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/HamburgerMenuStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
