<local:BaseView   x:Class="RetailTrade.POS.Views.Menus.ShiftView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:RetailTrade.POS.Views"
                  mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <dxlc:LayoutControl Orientation="Vertical">

        <TextBlock VerticalAlignment="Top"
                   FontSize="18"
                   TextAlignment="Center"
                   Text="Смена закрыта 20 июлья 2022 г. в 15:25"/>

        <Button Content="Открыть смену"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Width="400"
                Style="{StaticResource MainButton}"/>

        <TextBlock VerticalAlignment="Top"
                   FontSize="18"
                   TextAlignment="Center"
                   FontWeight="Bold"
                   Text="Денег в кассе: 500,00"/>

    </dxlc:LayoutControl>
    
</local:BaseView>
