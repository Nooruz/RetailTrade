<ResourceDictionary   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:menu="clr-namespace:RetailTradeServer.Views.Menus">

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <Style TargetType="{x:Type menu:BaseMenuView}" x:Key="BaseUserControl">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type menu:BaseMenuView}">

                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <dxlc:LayoutControl Orientation="Vertical"
                                            ItemSpace="15"
                                            Padding="0">

                                <TextBlock Text="{TemplateBinding Title}"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"/>

                                <dxlc:LayoutGroup Orientation="Horizontal"
                                              VerticalAlignment="Top"
                                              Visibility="{TemplateBinding ShowDefaultButtons, Converter={StaticResource BooleanToVisibilityConverter}}"
                                              HorizontalAlignment="Left">

                                    <Button Content="Создать"
                                        Command="{Binding CreateCommand}"/>

                                    <Button Content="Редактировать"
                                        Command="{Binding UpdateCommand}"/>

                                    <Button Content="Удалить"
                                        Command="{Binding DeleteCommand}"/>

                                </dxlc:LayoutGroup>

                                <ContentPresenter/>

                            </dxlc:LayoutControl>
                            
                            

                        </Grid>

                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
    
</ResourceDictionary>