<ResourceDictionary   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:menu="clr-namespace:RetailTradeServer.Views.Menus">

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <Style TargetType="{x:Type menu:BaseMenuView}" x:Key="BaseUserControl">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type menu:BaseMenuView}">

                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--<custom:LoadingPanel IsLoading="{Binding ShowLoadingPanel, UpdateSourceTrigger=PropertyChanged}"
                                                 Title="{Binding LoadingPanelTitle}"
                                                 Text="{Binding LoadingPanelText}"
                                                 Panel.ZIndex="1"/>-->

                            <dxlc:LayoutControl Orientation="Vertical"
                                                ItemSpace="15"
                                                Grid.Row="0"
                                                Padding="10 10 10 0">

                                <TextBlock Text="{TemplateBinding Title}"
                                           FontSize="24"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"/>

                                <dxlc:LayoutGroup Orientation="Horizontal"
                                                  VerticalAlignment="Top"
                                                  Visibility="{TemplateBinding ShowDefaultButtons, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  HorizontalAlignment="Left">

                                    <Button Content="Создать"
                                            Command="{Binding CreateCommand}"/>

                                    <Button Content="Редактировать"
                                            Command="{Binding EditCommand}"/>

                                    <Button Content="Удалить"
                                            Command="{Binding DeleteCommand}"/>

                                </dxlc:LayoutGroup>

                            </dxlc:LayoutControl>

                            <ContentPresenter Grid.Row="1"/>

                        </Grid>

                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
    
</ResourceDictionary>