<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dxdash="http://schemas.devexpress.com/winfx/2008/xaml/dashboard"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="RetailTradeServer.Views.Menus.AnalyticalPanelView">
    
    <dxlc:LayoutControl Orientation="Vertical">

        <dxlc:LayoutItem Label="Дата:">

            <dxe:DateEdit EditValue="{Binding SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        </dxlc:LayoutItem>

        <dxdash:DashboardControl Dashboard="{Binding RetailTradeDashboard}"
                                 VerticalAlignment="Top">
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand EventName="Loaded"
                                       Command="{Binding LoadedDashboardControlCommand}"
                                       PassEventArgsToCommand="True"/>
            </dxmvvm:Interaction.Behaviors>
        </dxdash:DashboardControl>

    </dxlc:LayoutControl>

</UserControl>