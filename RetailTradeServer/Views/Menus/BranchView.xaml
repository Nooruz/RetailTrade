<local:BaseMenuView x:Class="RetailTradeServer.Views.Menus.BranchView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RetailTradeServer.Views.Menus"
                    Title="{Binding Header}">


    <dxg:GridControl ItemsSource="{Binding Branches}">
        <dxg:GridControl.View>
            <dxg:TableView ShowTotalSummary="True" 
                               AllowEditing="False" 
                               AutoWidth="True"/>
        </dxg:GridControl.View>
        <dxg:GridColumn Header="Наименование" 
                            FieldName="Name"/>
        <dxg:GridColumn Header="Адрес" 
                            FieldName="Address"/>
        <dxg:GridColumn Header="Кассир" 
                            FieldName="Cashier"/>
    </dxg:GridControl>

</local:BaseMenuView>
