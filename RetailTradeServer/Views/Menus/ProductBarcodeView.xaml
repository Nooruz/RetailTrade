<UserControl
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"    x:Class="RetailTradeServer.Views.Menus.ProductBarcodeView"
                mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <dxlc:LayoutControl Orientation="Vertical">

        <dxg:GridControl ItemsSource="{Binding Products}"
                         SelectedItem="{Binding SelectedProduct}">
            <dxg:GridControl.View>
                <dxg:TableView ShowTotalSummary="True" 
                               AutoWidth="True" 
                               AllowEditing="False">
                    <dxmvvm:Interaction.Behaviors>
                        <dxmvvm:EventToCommand EventName="MouseDoubleClick" Command="{Binding AddProductToPrintCommand}"/>
                    </dxmvvm:Interaction.Behaviors>
                </dxg:TableView>
            </dxg:GridControl.View>
            <dxg:GridColumn Header="Наименование товара"
                            FieldName="Name"/>
        </dxg:GridControl>

        <dxg:GridControl ItemsSource="{Binding ProductBarcodePrintings}">
            <dxg:GridControl.View>
                <dxg:TableView ShowTotalSummary="True" AutoWidth="True"/>
            </dxg:GridControl.View>
            <dxg:GridColumn Header="Наименование товара"
                            FieldName="Name"
                            AllowEditing="False"/>
            <dxg:GridColumn Header="Количество"
                            FieldName="Quantity"/>
            <dxg:GridColumn Header="Штрих-код"
                            FieldName="Barcode"
                            AllowEditing="False"/>
        </dxg:GridControl>

        <dxlc:LayoutGroup HorizontalAlignment="Right"
                          VerticalAlignment="Top">

            <Button Content="Печатать"
                    Command="{Binding PrintProductBarcodeCommand}"/>
            <Button Content="Очистить"/>
            <Button Content="Закрыть"/>

        </dxlc:LayoutGroup>

    </dxlc:LayoutControl>

</UserControl>
